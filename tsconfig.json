{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "/app/src",
    "paths": {
      "src/*": [
        "./src/*"
      ],
      "src/modules/*": [
        "./modules/*"
      ]
    },
    "experimentalDecorators": true
  },
  "compileOnSave": false
}
