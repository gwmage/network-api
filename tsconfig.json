{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@/modules/*": [
        "modules/*"
      ],
      "@/config/*": [
        "../config/*"
      ]
    },
    "experimentalDecorators": true
  },
  "compileOnSave": false
}
